input(type="hidden" id="pageIndex" name="pageIndex" value="#{qContext.pageIndex}")
input(type='hidden' id='totalPage' name="totalPage" value="#{qContext.totalPage}")
each blog in qContext.result
    div(class="row col-lg-9 col-md-9 col-sm-9" style="word-break:break-all; word-wrap:break-word ;")
        a(href="#{modulePath}getBlog?p=#{blog.id}") #{blog.title}
        p #{blog.preview}
        span Posted by&nbsp;
            a(href="javascript:void(0);") #{blog.author}&nbsp;

            span on #{moment(blog.createTime).format('YYYY-MM-DD HH:mm:ss')}
        hr(class="col-lg-9 col-md-9 col-sm-9")
        if "#{blog.currUserId}"=="#{blog.authorId}"
            p
                a(href="#{baseParams.modulePath}personal/update?id=#{blog.id}") 修改
                a(href="javascript:void(0);" onclick="base.delete('#{baseParams.modulePath}personal/delete?id=#{blog.id}')") 删除

nav
    include ../../common/page.jade