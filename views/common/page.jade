
- var curIndex=qContext.pageIndex
- var pagerRange=5
- var totalPage=qContext.totalPage
- var begin=(1>=curIndex-parseInt(pagerRange/2))?1:parseInt(curIndex-pagerRange/2)
- var end=begin + pagerRange-1<totalPage?begin + pagerRange-1:totalPage
