ul(class="pagination")

    if qContext.totalPage!=0
        if qContext.pageIndex!=1
            li
                a(href="javascript:void(0);" class="page-btn" onclick="goPage(1);") 首页
            li
                a(href="javascript:void(0);" class="page-btn" onclick="page('up');") 上一页
        else
            li
                a(href="javascript:void(0);" class="page-btn") 首页
            li
                a(href="javascript:void(0);" class="page-btn") 上一页

        - for(var i=begin;i<=end;i++)
            li
                a(href="javascript:void(0);"  class="${i==qContext.pageIndex?'page-btn page-btn-cur':'page-btn'}" onclick="goPage(#{i});") #{i}


        if qContext.pageIndex!=qContext.totalPage
            li
                a(href="javascript:void(0);" class="page-btn" onclick="page('next');") 下一页
            li
                a(href="javascript:void(0);" class="page-btn" onclick="goPage('#{qContext.totalPage}');") 末页
        else
            li
                a(href="javascript:void(0);" class="page-btn") 下一页
            li
                a(href="javascript:void(0);" class="page-btn") 末页
    else
        亲，再怎么找也没有了 :)

